<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Page</title>
    <style>
        /* Styling untuk navigasi */
        nav {
            background-color: #333;
            padding: 10px;
        }
  
        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }
  
        nav ul li {
            display: inline;
            margin-right: 20px;
        }
  
        nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 16px;
        }
  
        nav ul li a:hover {
            text-decoration: underline;
        }
        table {
            width: 50%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 8px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
  </head>
  <body>
  
    <!-- Navigasi -->
    <nav>
        <ul>
            <li><a href="./index.ejs">Beranda</a></li>
            <li><a href="about">Tentang</a></li>
            <li><a href="contact">Kontak</a></li>
        </ul>
    </nav>
  
    <h1>Informasi Kontak</h1>

    <table>
        <thead>
            <tr>
                <th>Nama</th>
                <th>Mobile</th>
                <th>Email</th>

            </tr>
        </thead>
        <tbody>
            <% cont.forEach(function(item) { %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.mobile %></td>
                    <td><%= item.email %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
  </body>
  </html>
</html>