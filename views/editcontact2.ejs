<!-- views/editcontact2.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Contact</title>
</head>
<body>
    <% if (typeof errorMsg !== 'undefined') { %>
        <span style="color: red;">
            <%= errorMsg[0].path +': '+ errorMsg[0].msg +' '+ errorMsg[0].value %>
        </span>
        <br><br>
    <% } %>
  <h1>Edit Contact</h1>

  <!-- Form untuk mengupdate kontak -->
  <form action="/editcontact/<%= contact.id %>" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= contact.name %>" required>
    <br><br>

    <label for="mobile">Mobile:</label>
    <input type="text" id="mobile" name="mobile" value="<%= contact.mobile %>" required>
    <br><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= contact.email %>" required>
    <br><br>

    <button type="submit">Update Contact</button>
  </form>

  <br>
  <a href="/contacts">Back to Contacts</a>
</body>
</html>
